= form_for @user, :html => {:id => "add_pg", :class => "form-horizontal",:style => "margin: auto; width:400px;"}, :method => "PUT" do |f|
  %fieldset
    #legend
      %legend Create Password
    .control-group
      %label.control-label
        =f.label "Username"
      .controls
        =f.text_field :username
    .control-group
      %label.control-label
        =f.label "Password"
      .controls
        =f.password_field :password

    -#.control-group
